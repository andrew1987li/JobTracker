<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/widget54"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dip"

        >

        <Button
            android:id="@+id/butTakePhotoBefore"
            android:layout_width="0.0dip"
            android:layout_height="50dip"
            android:layout_weight="1.0"
            android:text="Before" />
        <Button
            android:id="@+id/butTakePhotoAfter"
            android:layout_width="0.0dip"
            android:layout_height="50dip"
            android:layout_weight="1.0"
            android:text="After" />


        <Button
            android:id="@+id/butTakePhotoOther"
            android:layout_width="0.0dip"
            android:layout_height="50dip"
            android:layout_weight="1.0"
            android:text="Other" />



    </LinearLayout>

    <ImageView
        android:id="@+id/img_preview"
        android:layout_gravity="left|top"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:layout_marginTop="0dip"
        android:background="@color/Netural"
        android:src="@color/White" />




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Name:"
            android:id="@+id/txtFileNameTag"
            android:textSize="15dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/txt_filename"
            android:textSize="10dp"
            android:layout_weight="18"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:id="@+id/txtChkTag"
            android:layout_weight="1"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/chkUpload"
           android:layout_weight="1"/>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:id="@+id/txtDescTag" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@android:color/transparent"

            android:textColor="@color/White"
            android:id="@+id/txt_description" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        >

        <Button
            android:id="@+id/butSavePhote"
            android:layout_width="0.0dip"
            android:layout_height="50dip"
            android:layout_weight="1.0"
            android:text="Save" />

        <Button
            android:id="@+id/butDeletePhoto"
            android:layout_width="0.0dip"
            android:layout_height="50dip"
            android:layout_weight="1.0"

            android:text="Delete" />

        <Button
            android:id="@+id/butExit"
            android:layout_width="0.0dip"
            android:layout_height="50dip"
            android:layout_weight="1.0"
            android:text="Exit" />


    </LinearLayout>
    <Gallery
        android:id="@+id/galary_images"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/butTakePhoto"
        android:background="@color/Black"
        android:fadingEdge="none" />

</LinearLayout>
</ScrollView><!-- From: file:/C:/Projects/StudioProjects/jobtrackermobile/app/src/main/res/layout/photos.xml -->