<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/portraitRelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/labHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/paperwork"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/txtPaperwork"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/labHeading"
        android:layout_marginTop="15dp" 
        android:ems="10"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:lines="10" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtPaperwork"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"
        android:text="@string/save"
        android:width="120dp" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSave"
        android:layout_alignBottom="@+id/btnSave"
        android:layout_alignRight="@+id/labHeading"
        android:text="@string/close"
        android:width="120dp" />

</RelativeLayout>    
